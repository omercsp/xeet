{
	"$schema": "https://raw.githubusercontent.com/omercsp/taskrunner/master/schemas/taskrunner_v0.9.json",
	"variables": {
		"xeetBin": "{{taskRoot}}/xeetrun.sh",
		"xeetConfig": "{{taskRoot}}/tests/sanity/sanity.json",
		"xeetLog": "/tmp/xeet.log",
		"defualtOps": "--log-file={{xeetLog}} -c {{xeetConfig}}"
	},
	"tasks": {
		"all": {
			"short_desc": "Run test",
			"commands": [
				"{{xeetBin}} run {{defualtOps}}"
			],
			"cwd": "{{taskRoot}}"
		},
		"all-no-colors": {
			"short_desc": "Run test",
			"commands": [
				"{{xeetBin}} --no-colors run {{defualtOps}}"
			],
			"cwd": "{{taskRoot}}"
		},
		"qa-test": {
			"short_desc": "Run QA test (xeet runnign xeet)",
			"commands": [
				"./runtest"
			],
			"cwd": "{{taskRoot}}/tests"
		},
		"run": {
			"base": "debug"
		},
		"debug": {
			"short_desc": "Run test",
			"commands": [
				"{{xeetBin}} --no-colors run {{defualtOps}} -t 001_pass"
			],
			"cwd": "{{taskRoot}}"
		},
		"not_exists": {
			"short_desc": "Run not exists test",
			"commands": [
				"{{xeetBin}} run {{defualtOps}} -t not_exist"
			],
			"cwd": "{{taskRoot}}"
		},
		"dump": {
			"short_desc": "dump a test",
			"commands": [
				"{{xeetBin}} dump {{defualtOps}} -t 008.a"
			],
			"cwd": "{{taskRoot}}"
		},
		"list": {
			"short_desc": "list tests",
			"commands": [
				"{{xeetBin}} list {{defualtOps}}"
			],
			"cwd": "{{taskRoot}}"
		},
		"info": {
			"short_desc": "info",
			"commands": [
				"{{xeetBin}} info {{defualtOps}} -t 001"
			],
			"cwd": "{{taskRoot}}"
		}
	},
	"default_task": "debug",
	"default_container_tool": "/usr/bin/podman",
	"use_default_include": false
}
